<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GuardDog" parent="Theme.MaterialComponents.DayNight.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorSplashBackground</item>
        <item name="colorPrimaryVariant">@color/colorSplashBackground2</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="SplashTheme" parent="Theme.GuardDog">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>
</resources>